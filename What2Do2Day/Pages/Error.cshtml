@page
@model What2Do2Day.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold text-red-500 mb-4">Error</h1>
    <h2 class="text-2xl mb-4">An error occurred while processing your request.</h2>
    <p class="text-gray-300">Request ID: <code>@Model.RequestId</code></p>
    @if (Model.ShowRequestId)
    {
        <p class="text-gray-300">Please contact support with this ID if the issue persists.</p>
    }
</div>