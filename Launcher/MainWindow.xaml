<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="Launcher" Height="800" Width="500" Background="Bisque">
    
    
    <Window.DataContext>
        <local:Controller/>
    </Window.DataContext>



    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Coral"/>
            <Setter Property="Margin" Value="10"/>

        </Style>

        <Style x:Key="textBlockDesign" TargetType="{x:Type TextBlock}">

            <Setter Property="FontSize" Value="35"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property= "Foreground" Value="Firebrick"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>

    </Window.Resources>


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="What2DoToday" Grid.ColumnSpan="4" Style="{StaticResource textBlockDesign}"/>

        <Button Grid.Row="1" Grid.ColumnSpan="4" Content="Anime?" Click="Button_Click"/>
        <Button Grid.Row="2" Grid.ColumnSpan="4" Content="Lesen?"/>
        <Button Grid.Row="3" Grid.ColumnSpan="4" Content="Spielen?"/>
        <Button Grid.Row="4" Grid.ColumnSpan="4" Content="Drugs?"/>

    </Grid>
</Window>
